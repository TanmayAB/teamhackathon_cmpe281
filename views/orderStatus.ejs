<div id="orderDetails" ng-init="getOrderStatus()">
    <div class="container">
        <div class="panel panel-info">
            <div class="panel-heading">Order Details</div>
            <div class="panel-body">
                <div class="row top-buffer">
                    <div class="col-md-6">
                        <h4 style="display: inline">Order from: </h4>
                        <h3 style="display: inline"> {{order.location}}</h3>
                    </div>
                    <div class="col-md-6 text-right">
                        <button id="edit" class="btn btn-success" ng-click="allOrders()">All Orders</button>
                    </div>
                </div>
                <hr/>
                <div class="row top-buffer">
                    <div class="col-md-6 text-left"><h4>Your order items</h4></div>
                    <div class="col-md-6 text-right">
                        <button id="edit" class="btn btn-success" ng-click="newOrder()">New Order</button>
                    </div>
                </div>
                <div class="top-buffer">
                    <table class="table table-striped table-hover" id="myTable">
                        <thead>
                        <tr>
                            <th class="col-md-3 text-center">Coffee</th>
                            <th class="col-md-2 text-center">Quantity</th>
                            <th class="col-md-3 text-center">Milk Type</th>
                            <th class="col-md-2 text-center">Size</th>
                            <th class="col-md-2 text-center">Price</th>
                        </tr>
                        </thead>
                        <tbody id="form">
                        <tr class='Box divbutton' ng-repeat="item in order.items">
                            <td class="text-center">
                                <label>{{item.name}}</label>
                            </td>
                            <td class="text-center"><label>{{item.qty}}</label></td>
                            <td class="text-center">
                                <label>{{item.milk_type}}</label>
                            </td>
                            <td class="text-center">
                                <label>{{item.size}}</label>
                            </td>
                            <td class="text-center"><label for="myvalue">{{prices[item.size] * item.qty}}</label></td>
                        </tr>
                        </tbody>
                    </table>
                    <div class="row text-center">
                        <h3>Order Amount: <b>{{ order.amount }}</b></h3>
                    </div>
                </div>

            </div>
            <div class="panel-footer text-center clearfix">
                <div class="progress progress-striped active">
                    <div id="progressbar" class="progress-bar progress-bar-info" animate="true" role="progressbar">
                        <label id="status">{{order.status}}</label>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>