<div id="placeorder" ng-controller="orderController" ng-init="getPrices()">
    <form class="container" id="myForm">
        <div class="row"><h2>Order</h2></div>
        <div class="row"></div>
        <div class="row">
            <div class="col-md-6 text-left"><h4>Build your order here: </h4></div>
            <div class="col-md-6 text-right"><button id="add" class="btn btn-info" onclick="addRow('myTable')">Add Item</button></div>
        </div>
        <div class="table-responsive">
            <table class="table table-striped table-hover" id="myTable">
                <thead>
                <tr>
                    <th class="col-md-3 text-center">Coffee</th>
                    <th class="col-md-2 text-center">Quantity</th>
                    <th class="col-md-3 text-center">Milk Type</th>
                    <th class="col-md-2 text-center">Size</th>
                    <th class="col-md-2 text-center">Price</th>
                </tr>
                </thead>
                <tbody id="form">
                <tr class='Box divbutton'>
                    <td class="text-center">
                        <select class="dropdown" id="coffee" name="coffee">
                            <option value="mocha">Mocha</option>
                            <option value="tea">Tea</option>
                            <option value="cappuccino">Cappuccino</option>
                        </select>
                    </td>
                    <td class="text-center"><input name="qty" class="form-control input-sm" id="inputsm" type="number"></td>
                    <td class="text-center">
                        <select class="dropdown" id="milk" name="milk_type">
                            <option value="whole">Whole</option>
                            <option value="latte">Latte</option>
                            <option>Soy</option>
                        </select>
                    </td>
                    <td class="text-center">
                        <select class="dropdown" id="size" onchange="sizeChanged(this)" name="size">
                            <option value="small" selected>Small</option>
                            <option value="medium">Medium</option>
                            <option value="large">large</option>
                        </select>
                    </td>
                    <td class="text-center"><label for="myvalue">$ {{prices.small}}</label></td>
                    <td>
                    <span type="button" class="remove glyphicon glyphicon-remove-sign" style="color:red"
                          onclick="$(this).parent().parent().remove();"></span>
                    </td>
                </tr>
                </tbody>
            </table>
        </div>
        <div class="row">
            <div class="col-md-12 text-center">
                <button class="btn btn-primary" ng-click="placeOrder()">Place Order</button>
            </div>
        </div>
    </form>
</div>