<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.0/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.4.8/angular.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.4.8/angular-route.min.js"></script>
    <script src="angularjs/home.js"></script>
    <title>Starbucks</title>
    <script>
        $(document).ready(function(){
            $("#add").click(function () {
                var smallvalue = $('[ng-controller="appController"]').scope().prices.small;
                var newdiv = $( "<tr class='Box divbutton'> <td class='text-center'> <" +
                    "select class='dropdown' id='coffee'> <option>Mocha</option> <option>Tea</option> " +
                    "<option>Cappuccino</option> </select> </td> <td class='text-center'>" +
                    "<input class='form-control input-sm' id='inputsm' type='number'></td> " +
                    "<td class='text-center'> <select class='dropdown' id='milk'> " +
                    "<option>Whole</option> <option>Latte</option> <option>Soy</option> </select> </td> " +
                    "<td class='text-center'> <select class='selectpicker' id='size' onchange='sizeChanged()'> " +
                    "<option value='small'>Small</option> <option value='medium'>Medium</option> " +
                    "<option value='large'>large</option> </select> </td> " +
                    "<td class='text-center'><label for='myvalue'>$ "+smallvalue+"</label></td> " +
                    "<td> <span type='button' class='remove glyphicon glyphicon-remove-sign' style='color:red' " +
                    "onclick='$(this).parent().parent().remove();'></span> </td> </tr>" );
                $("#form").append(newdiv);
            });
        });

        function sizeChanged() {
            var size = $('#size').val();
            var scope = $('[ng-controller="appController"]').scope();
            switch (size) {
                case "small": {
                    var temp =
                        $("label[for='myvalue']").html("$ " + scope.prices.small);
                    break;
                }
                case "medium": {
                    $("label[for='myvalue']").html("$ " + scope.prices.medium);
                    break;
                }
                case "large": {
                    $("label[for='myvalue']").html("$ " + scope.prices.large);
                    break;
                }
                default: {
                    $("label[for='myvalue']").html("$ " + scope.prices.small);
                    break;
                }
            }
        }
    </script>
</head>

<body ng-app="app" ng-controller="appController" ng-init="getPrices()">
<h1 class="jumbotron text-center">Starbucks Coffee Shop</h1>
<div class="container">
    <h2>Order</h2>
    <div class="row">
        <div class="col-md-6 text-left"><h4>Build your order here: </h4></div>
        <div class="col-md-6 text-right"><button id="add" class="btn btn-info">Add Item</button></div>
    </div>
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead>
            <tr>
                <th class="col-md-3 text-center">Coffee</th>
                <th class="col-md-2 text-center">Quantity</th>
                <th class="col-md-3 text-center">Milk Type</th>
                <th class="col-md-2 text-center">Size</th>
                <th class="col-md-2 text-center">Price</th>
            </tr>
            </thead>
            <tbody id="form">
            <tr class='Box divbutton'>
                <td class="text-center">
                    <select class="dropdown" id="coffee">
                        <option>Mocha</option>
                        <option>Tea</option>
                        <option>Cappuccino</option>
                    </select>
                </td>
                <td class="text-center"><input class="form-control input-sm" id="inputsm" type="number"></td>
                <td class="text-center">
                    <select class="dropdown" id="milk">
                        <option>Whole</option>
                        <option>Latte</option>
                        <option>Soy</option>
                    </select>
                </td>
                <td class="text-center">
                    <select class="selectpicker" id="size" onchange="sizeChanged()">
                        <option value="small">Small</option>
                        <option value="medium">Medium</option>
                        <option value="large">large</option>
                    </select>
                </td>
                <td class="text-center"><label for="myvalue">$ {{prices.small}}</label></td>
                <td>
                    <span type="button" class="remove glyphicon glyphicon-remove-sign" style="color:red"
                    onclick="$(this).parent().parent().remove();"></span>
                </td>
            </tr>
            </tbody>
        </table>
    </div>
    <div class="row">
        <div class="col-md-12 text-center">
            <button class="btn btn-primary">Place Order</button>
        </div>
    </div>
</div>
</body>
