    <title>Starbucks</title>
    <script>
        function addRow(tableID){
            var table = document.getElementById(tableID);
            var rowCount = table.rows.length;
            var row = table.insertRow(rowCount);
            if(rowCount > 1) {
                var colCount = table.rows[rowCount - 1].cells.length;
                for (var i = 0; i < colCount; i++) {
                    var newcell = row.insertCell(i);
                    newcell.innerHTML = table.rows[rowCount - 1].cells[i].innerHTML;
                    newcell.style.textAlign = 'center';
                    if (i === colCount - 2) {
                        var smallvalue = $('[ng-controller="orderController"]').scope().prices.small;
                        newcell.childNodes[0].innerHTML = "$ " + smallvalue;
                    } else {
                        switch (newcell.childNodes[0].type) {
                            case "text":
                                newcell.childNodes[0].value = "";
                                break;
                            case "number":
                                newcell.childNodes[0].value = "";
                                break;
                            case "checkbox":
                                newcell.childNodes[0].checked = false;
                                break;
                            case "select-one":
                            case "dropdown":
                                newcell.childNodes[0].selectedIndex = 0;
                                break;
                        }
                    }
                }
            }else{
                var newcell = row.insertCell(0);
                newcell.innerHTML = "<select class='dropdown' id='coffee' name='coffee'> <option value='mocha'>Mocha</option> <option value='tea'>Tea</option> <option value='cappuccino'>Cappuccino</option> </select>";
                newcell.style.textAlign = 'center';
                var newcell = row.insertCell(1);
                newcell.innerHTML = "<input name='qty' class='form-control input-sm' id='inputsm' type='number'>";
                newcell.style.textAlign = 'center';
                var newcell = row.insertCell(2);
                newcell.innerHTML = "<select class='dropdown' id='milk' name='milk_type'> <option value='whole'>Whole</option> <option value='latte'>Latte</option> <option>Soy</option> </select>";
                newcell.style.textAlign = 'center';
                var newcell = row.insertCell(3);
                newcell.innerHTML = "<select class='dropdown' id='size' onchange='sizeChanged(this)' name='size'> <option value='small' selected>Small</option> <option value='medium'>Medium</option> <option value='large'>large</option> </select>";
                newcell.style.textAlign = 'center';
                var newcell = row.insertCell(4);
                var smallvalue = $('[ng-controller="orderController"]').scope().prices.small;
                newcell.innerHTML = "<label for='myvalue'>$ "+ smallvalue +"</label>";
                newcell.style.textAlign = 'center';
                var newcell = row.insertCell(5);
                newcell.innerHTML = "<span type='button' class='remove glyphicon glyphicon-remove-sign' style='color:red' onclick='$(this).parent().parent().remove();'></span>";
                newcell.style.textAlign = 'center';
            }
        };

        function sizeChanged(element) {
            var size = $(element).val();
            var scope = $('[ng-controller="orderController"]').scope();
            switch (size) {
                case "small": {
                    var temp =
                        $(element).parent().parent().find("label[for='myvalue']").html("$ " + scope.prices.small);
                    break;
                }
                case "medium": {
                    $(element).parent().parent().find("label[for='myvalue']").html("$ " + scope.prices.medium);
                    break;
                }
                case "large": {
                    $(element).parent().parent().find("label[for='myvalue']").html("$ " + scope.prices.large);
                    break;
                }
                default: {
                    $(element).parent().parent().find("label[for='myvalue']").html("$ " + scope.prices.small);
                    break;
                }
            }
        };
    </script>
